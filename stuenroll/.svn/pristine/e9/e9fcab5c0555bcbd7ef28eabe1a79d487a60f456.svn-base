body{
    background-color: #e7e7e7;
}

.main-container{
    .error{
        color: red !important;
    }
    .come{
        display:block !important;
    }
    background-color: #fff;
    margin: 15/16rem;
    padding: 15/16rem;
    .tab-list{
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #EBEEF7;
        .tab-item{
            float: left;
            height: 36/16rem;
            line-height: 36/16rem;
            text-align: center;
            padding-left: 20/16rem;
            padding-right: 20/16rem;
            letter-spacing: 1/16rem;
            font-size: 14/16rem;
            cursor: pointer;
        }
        .tab-active{
            color: #fff;
            background-color: #02A0E9;
        }
    }
    .tab-container{
        .active {
            display: block !important;
        }
        //overflow: hidden;
        .tab-content{
            display: none;
            .operation-list{
                list-style: none;
                margin: 0;
                padding: 0;
                height: 48/16rem;
                position: relative;    
                .operation-item{
                    float: left;
                    height: 48/16rem;
                    line-height: 48/16rem;
                    letter-spacing: 1/16rem;
                    font-size: 14/16rem;
                    padding-left: 10/16rem;
                    padding-right: 10/16rem;
                    cursor: pointer;
                    display:none;
                    .menu{
                        .bref{
                            font-weight: 600;
                            padding: 0;
                            position: absolute;
                            top: 80/16rem;
                            left: 20/16rem;
                        }
                        display:none;
                        cursor: default;
                        left: 0;
                        top: 38/16rem;
                        background-color: #f0f0f0;
                        color: #333;
                        width: 100%;
                        border: solid #e0e0e0 1/16rem;
                        box-shadow: 0 3/16rem 4/16rem rgba(0,0,0,0.18);
                        padding: 20/16rem;
                        position: absolute;
                        z-index: 50;
                        float: left;
                        overflow: hidden;
                        .menu-title {
                            margin-top: 0;
                            margin-bottom: 0;
                            padding-bottom: 10/16rem;
                            font-size: 15/16rem;
                            letter-spacing: 1/16rem;
                            border-bottom: #ccc dashed 1/16rem;
                        }
                        dl{
                            overflow: hidden;
                            margin-bottom: 5/16rem;
                            margin-left: 85/16rem;
                            padding: 0;
                            dt{
                                float: left;
                                letter-spacing: 1/16rem;
                                height: 32/16rem;
                                line-height: 32/16rem;
                                margin-right: 20/16rem;
                                .select-box{
                                    width: 200/16rem;
                                    height: 32/16rem;
                                    padding-left: 10/16rem;
                                    padding-right: 10/16rem;
                                    margin: 0;
                                    border: solid #ccc 1/16rem;
                                    color:#666666;
                                    border-radius: 4/16rem;
                                }
                            }
                            
                            .quit-text{
                                margin: 0;
                                padding: 0;
                                top: 80/16rem;
                                left: 120/16rem;
                                .quit-reason{
                                    height: 160/16rem;
                                    width: 530/16rem;
                                }
                                .text-btn{
                                    float: none;
                                }
                                dl{
                                    margin: 0;
                                    padding: 0;
                                    float: left;
                                }
                            }
                        }
                        .label {
                            float: left;
                            width: 80/16rem;
                            letter-spacing: 1/16rem;
                            height: 32/16rem;
                            line-height: 32/16rem;
                            text-align: right;
                            padding-right: 5/16rem;
                            margin-bottom: 15/16rem;
                        }
                        .condition {
                            float: left;
                            margin-right: 40/16rem;
                            margin-bottom: 15/16rem;
                            .keyword {
                                width: 200/16rem;
                                height: 32/16rem;
                                padding-left: 10/16rem;
                                padding-right: 10/16rem;
                                border: solid #ccc 1/16rem;
                                outline: none;
                                letter-spacing: 1/16rem;
                                border-radius: 4/16rem;
                            }
                        }
                        .menu-btn {
                            display: block;
                            width: 120/16rem;
                            height: 32/16rem;
                            margin-bottom: 15/16rem;
                            margin-left: 20/16rem;
                            background-color: #F4494E;
                            border: none;
                            color: #fff;
                            outline: none;
                            border-radius: 3/16rem;
                            letter-spacing: 1/16rem;
                            font-size: 14/16rem;
                            font-weight: 600;
                            border-radius: 4/16rem;
                            &:active {
                                background-color: #CD0C12;
                            }
                        }
                    }
                }
            }
            .page-list{
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #EBEEF7;
            margin-top: 15/16rem;
            .page-item{
                height: 40/16rem;
                font-size: 14/16rem;
                line-height: 40/16rem;
            }
            .page-info{
                float: left;
                margin-left: 15/16rem;
                span{
                    margin-left: 5/16rem;
                    margin-right: 5/16rem;
                }
            }
            .page-operation{
                float: right;
                margin-right: 10/16rem;
                a{
                    cursor: pointer;
                    padding-left: 5/16rem;
                    padding-right: 5/16rem;
                    &:hover{
                        color: #ff6700;
                    }
                }
                .page-active{
                    color: red;
                    font-weight: 600;
                }
                .page-disable{
                    color: #B9B9B9;
                    cursor: default;
                    &:hover{
                        color: #B9B9B9;
                    }
                }
            }
        }
        }
        .content-active{
            display: block;
        }
    }
}
