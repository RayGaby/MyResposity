@height: 1145/16rem;
body {
    background-color: #e7e7e7;
    display: -moz-box;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
}
.chart-container {
    height: inherit;
    padding: 15/16rem;
    flex-grow: 1;
    min-width: 1310/16rem;
    .content1 {
        height: 350/16rem;
        background-color: grey;
    }
    .content2 {
        height: 390/16rem;
        background-color: gainsboro;
        margin-top: 15/16rem;
        margin-bottom: 15/16rem;
    }
    .content3 {
        height: 350/16rem;
        .content3_1 {
            height: inherit;
            float: left;
            width: 70%;
            padding-right: 15/16rem;
            background-color: cadetblue;
        }
        .content3_2 {
            height: inherit;
            float: left;
            width: 30%;
            background-color: skyblue;
        }
    }
}
.myfriends-container {
    height: 1145/16rem;
    width: 330/16rem;
    flex-grow: 0;
    flex-shrink: 0;
    padding: 15/16rem 0;
    //position: relative;
    .myfriends-title {
        height: 80/16rem;
        background-color: #fff;
        width: 330/16rem;
        //overflow: hidden;
        //position: absolute;
        //top: 15/16rem;
        .title-context {
            height: 40/16rem;
            float: left;
            margin: 20/16rem 0 0 30/16rem;
            font-size: 20/16rem;
            font-weight: 700;
            letter-spacing: 1/16rem;
            color: #3999FF;
        }
        .title-mark {
            height: 33/16rem;
            width: 22/16rem;
            text-align: center;
            margin-top: 15/16rem;
            margin-left: 10/16rem;
            font-size: 26/16rem;
            font-weight: 700;
            background-color: #3399FF;
            color: #fff;
            float: left;
            cursor: pointer;
        }
    }
    .myfriends-list {
        background-color: #fff;
        height: 1000/16rem;
        width: 330/16rem;
        position: relative;
        .myfriends-search {
            height: 100/16rem;
            width: 330/16rem;
            background-color: #0CCDCD;
            text-align: center;
            position: absolute;
            position: relative;
            //background-color: rgba(25,255,255,0.7);
            .input {
                width: 280/16rem;
                height: 45/16rem;
                line-height: 45/16rem;
                margin-top: 27/16rem;
                padding-left: 55/16rem;
                padding-right: 45/16rem;
                
                border-top-left-radius: 45/16rem;
                border-top-right-radius: 45/16rem;
                border-bottom-left-radius: 45/16rem;
                border-bottom-right-radius: 45/16rem;
                font-size: 14/16rem;
                //background-color: rgba(255,255,255,0.7);
                border: solid #e9e9e9 1/16rem;
                color: #333;
                letter-spacing: 1/16rem;
                outline: none;
                border: none;
            }
            .magnifier{
                height: 30/16rem;
                width: 30/16rem;
                position: absolute;
                top: 35/16rem;
                left: 37/16rem;
                cursor: pointer;
            }
            .search-furcation{
                height: 30/16rem;
                width: 30/16rem;
                position: absolute;
                top: 35/16rem;
                left: 260/16rem;
                cursor: pointer;
            }
        }
        .myfriends-search-hidden {
            display: none;
        }
        .list-container {
            height: inherit;
            margin: 0;
            padding: 0;
            .list-item {
                height: 100/16rem;
                padding-left: 25/16rem;
                .photo-container {
                    margin-top: 15/16rem;
                    float: left;
                    width: 90/16rem;
                    position: relative;
                    .user-photo {
                        float: left;
                        width: 70/16rem;
                        height: 70/16rem;
                        border-radius: 100%;
                        border: solid 2/16rem #939395;
                    }
                    .small-circle {
                        float: left;
                        position: absolute;
                        top: 54/16rem;
                        left: 51/16rem;
                        width: 20/16rem;
                        height: 20/16rem;
                        border-radius: 100%;
                        background-color: #3188CF;
                        border: solid 4/16rem #fff;
                    }
                    .circle-green {
                        background-color: #82D15C;
                    }
                    .circle-red {
                        background-color: #F55D5E;
                    }
                }
                .personal-info {
                    float: left;
                    width: 160/16rem;
                    .info-container {
                        .myfriends-name {
                            font-size: 18/16rem;
                            font-weight: 600;
                            padding-bottom: 5/15rem;
                        }
                        .myfriends-role {
                            font-size: 12/16rem;
                        }
                        .myfriends-organization {
                            font-size: 12/16rem;
                        }
                    }
                }
                .action {
                    float: left;
                    margin-top: 15/16rem;
                    .star {
                        width: 22/16rem;
                        float: left;
                        color: #fff;
                        cursor: pointer;
                    }
                    .furcation {
                        height: 22/16rem;
                        width: 22/16rem;
                        float: left;
                        color: #fff;
                        cursor: pointer;
                    }
                }
                .action-hidden {
                    display: none;
                }
            }
            .bgc-active {
                background-color: #3399FF;
                color: #fff;
            }
        }
        .list-container-hidden {
            display: none;
            height: 1000/16rem;
            width: 330/16rem;
            background-color: #fff;
        }
    }
    .myfriends-bottom {
        //position: absolute;
        //top: 1100/16rem;
        width: 330/16rem;
        .page-list {
            margin: 0;
            padding-top: 10/16rem;
            overflow: hidden;
            background-color: #EBEEF7;
            .page-item {
                height: 35/16rem;
                line-height: 35/16rem;
                font-size: 14/16rem;
                font-weight: bold;
            }
            .page-operation1 {
                float: left;
                width: 25%;
                a {
                    color: #fff;
                    cursor: pointer;
                    margin-left: 12/16rem;
                    padding-left: 5/16rem;
                    padding-right: 5/16rem;
                    &:hover {
                        color: #ff6700;
                    }
                }
                background-color: #3399FF;
                border-top-left-radius: 30/16rem;
                border-top-right-radius: 9/16rem;
                border-bottom-left-radius: 30/16rem;
                border-bottom-right-radius: 9/16rem;
            }
            .page-operation2 {
                float: right;
                width: 25%;
                a {
                    color: #fff;
                    cursor: pointer;
                    margin-left: 12/16rem;
                    padding-left: 5/16rem;
                    padding-right: 5/16rem;
                    &:hover {
                        color: #ff6700;
                    }
                }
                background-color: #3399FF;
                border-top-left-radius: 9/16rem;
                border-top-right-radius: 30/16rem;
                border-bottom-left-radius: 9/16rem;
                border-bottom-right-radius: 30/16rem;
            }
            .page-info {
                float: left;
                width: 50%;
                text-align: center;
                span {
                    margin-left: 5/16rem;
                    margin-right: 5/16rem;
                }
            }
        }
    }
}