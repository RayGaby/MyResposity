body {
    background-color: #e7e7e7;
}
.main-container {
    height: 1250/16rem;
    padding: 15/16rem;
    display: -moz-box;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    .info-content {
        overflow: hidden;
        height: inherit;
        padding-right: 15/16rem;
        flex-grow: 1;
        min-width: 1310/16rem;
        .info-list {
            overflow: hidden;
            .info-item {
                height: 335/16rem;
                overflow: hidden;
                &:nth-child(1) {
                    background-color: #fff;
                    .title {
                        height: 120/16rem;
                        padding-left: 60/16rem;
                        padding-top: 35/16rem;
                        .first-title {
                            float: left;
                            background-color: black;
                            color: #fff;
                            font-weight: 600;
                            font-size: 26/16rem;
                            height: 45/16rem;
                            width: 150/16rem;
                            padding-left: 20/16rem;
                            line-height: 45/16rem;
                        }
                        .next-title {
                            float: left;
                            font-size: 20/16rem;
                            font-weight: 400;
                            padding-left: 20/16rem;
                            line-height: 27/16rem;
                            border-bottom: solid 5/16rem black;
                        }
                    }
                    .input-content {
                        position: relative;
                        .input-flag {
                            .sign {
                                position: absolute;
                                width: 60/16rem;
                                height: 35/16rem;
                                border: solid 4/16rem #297ACC;
                                background-color: #3398FD;
                                border-radius: 30%;
                                border-top-right-radius: 100%;
                                border-bottom-right-radius: 100%;
                                color: #fff;
                                text-align: center;
                                line-height: 28/16rem;
                                font-size: 15/16rem;
                                left: 120/16rem;
                            }
                            .desc {
                                position: absolute;
                                left: 200/16rem;
                                font-size: 20/16rem;
                                letter-spacing: 1/16rem;
                                text-align: center;
                                width: inherit;
                            }
                        }
                        .input-list {
                            position: absolute;
                            padding-left: 400/16rem;
                            .input-item {
                                padding-top: 10/16rem;
                                padding-bottom: 10/16rem;
                                label {
                                    width: 75/16rem;
                                    font-size: 14/16rem;
                                    letter-spacing: 1/16rem;
                                    display: inline-block;
                                }
                                .input {
                                    width: 300/16rem;
                                    height: 40/16rem;
                                    outline: none;
                                    border-radius: 3/16rem;
                                    border: solid 1/16rem #e0e0e0;
                                    color: #333;
                                    font-size: 14/16rem;
                                    letter-spacing: 1/16rem;
                                    padding-left: 15/16rem;
                                    padding-right: 15/16rem;
                                }
                            }
                        }
                        .input-photo {
                            left: 1000/16rem;
                            position: absolute;
                            width: 100/16rem;
                            height: 100/16rem;
                            padding-top: 50/16rem;
                        }
                    }
                }
                &:nth-child(2) {
                    background-color: #ECF0F1;
                    .input-content {
                        position: relative;
                        .input-flag {
                            padding-top: 30/16rem;
                            .sign {
                                position: absolute;
                                width: 60/16rem;
                                height: 35/16rem;
                                border: solid 4/16rem #297ACC;
                                background-color: #3398FD;
                                border-radius: 30%;
                                border-top-right-radius: 100%;
                                border-bottom-right-radius: 100%;
                                color: #fff;
                                text-align: center;
                                line-height: 28/16rem;
                                font-size: 15/16rem;
                                left: 120/16rem;
                            }
                            .desc {
                                position: absolute;
                                padding-left: 200/16rem;
                                font-size: 20/16rem;
                                letter-spacing: 1/16rem;
                                text-align: center;
                                width: inherit;
                            }
                        }
                        .input-list {
                            position: absolute;
                            padding-left: 400/16rem;
                            .input-item {
                                padding-bottom: 20/16rem;
                                label {
                                    width: 75/16rem;
                                    font-size: 14/16rem;
                                    letter-spacing: 1/16rem;
                                    display: inline-block;
                                }
                                .input {
                                    width: 300/16rem;
                                    height: 40/16rem;
                                    outline: none;
                                    border-radius: 3/16rem;
                                    border: solid 1/16rem #e0e0e0;
                                    color: #333;
                                    font-size: 14/16rem;
                                    letter-spacing: 1/16rem;
                                    padding-left: 15/16rem;
                                    padding-right: 15/16rem;
                                }
                            }
                        }
                    }
                }
                &:nth-child(3) {
                    background-color: #fff;
                    .input-content {
                        position: relative;
                        .input-flag {
                            padding-top: 30/16rem;
                            .sign {
                                position: absolute;
                                width: 60/16rem;
                                height: 35/16rem;
                                border: solid 4/16rem #297ACC;
