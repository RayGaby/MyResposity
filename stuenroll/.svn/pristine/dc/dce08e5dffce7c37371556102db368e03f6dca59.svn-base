body {
    background-color: #e7e7e7;
}
.main-container {
    background-color: #fff;
    margin: 15/16rem;
    padding: 15/16rem;
    .tab-list {
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #EBEEF7;
        .tab-item {
            color: #fff;
            background-color: #02A0E9;
            float: left;
            height: 36/16rem;
            line-height: 36/16rem;
            text-align: center;
            padding-left: 20/16rem;
            padding-right: 20/16rem;
            letter-spacing: 1/16rem;
            font-size: 14/16rem;
            cursor: pointer;
        }
    }
    .tab-container {
        overflow: hidden;
        .tab-content {
            .operation-list {
                margin: 0;
                padding: 0;
                height: 48/16rem;
                .operation-item {
                    float: left;
                    height: 48/16rem;
                    line-height: 48/16rem;
                    text-align: center;
                    letter-spacing: 1/16rem;
                    font-size: 14/16rem;
                    padding-left: 10/16rem;
                    padding-right: 10/16rem;
                    cursor: pointer;
                }
            }
            .showclass-container {
                //display: none;
                width: 1601/16rem;
                position: absolute;
                background-color: #F0F0F0;
                border-radius: 5/16rem;
                padding-bottom: 30/16rem;
                margin-bottom: 15/16rem;
                .title-content {
                    padding-top: 15/16rem;
                    padding-left: 30/16rem;
                    padding-right: 30/16rem;
                    .title {
                        font-size: 16/16rem;
                        border-bottom: dashed 1.5/16rem #999;
                        padding-bottom: 15/16rem;
                    }
                }
                .showtab-content {
                    width: 1000/16rem;
                    margin-top: 20/16rem;
                    margin-left: 30/16rem;
                    float: left;
                    .class-table {
                        width: 100%;
                        clear: none;
                        float: none;
                        font-size: 14/16rem;
                        border: solid #e0e0e0 1/16rem;
                        border-collapse: collapse;
                        tr {
                            height: 35/16rem;
                            &:nth-child(odd) {
                                background-color: #0099FF;
                            }
                        }
                        td {
                            padding: 0;
                            margin: 0;
                            border: solid #e0e0e0 1/16rem;
                            padding-left: 10/16rem;
                            padding-right: 10/16rem;
                            font-size: 14/16rem;
                            overflow: hidden;
                            text-overflow: ellipsis;
                            white-space: nowrap;
                            &:first-child {
                                width: 50/16rem;
                                text-align: center;
                                input[type="checkbox"] {
                                    -webkit-appearance: none;
                                    background: #fff url("../img/checkbox.png");
                                    height: 22/16rem;
                                    vertical-align: middle;
                                    width: 22/16rem;
                                }
                                input[type="checkbox"]:checked {
                                    background-position: -48/16rem 0;
                                }
                            }
                        }
                        th {
                            color: #fff;
                            padding: 0;
                            margin: 0;
                            border: solid #e0e0e0 1/16rem;
                            padding-left: 10/16rem;
                            padding-right: 10/16rem;
                            text-align: left;
                        }
                    }
                    .page-content {
                        background-color: #fff;
                        .classpage-list {
                            margin: 0;
                            padding: 0;
                            overflow: hidden;
                            margin-top: 15/16rem;
                            .classpage-item {
                                height: 40/16rem;
                                font-size: 14/16rem;
                                line-height: 40/16rem;
                            }
                            .classpage-info {
                                float: left;
                                margin-left: 15/16rem;
                                span {
                                    margin-left: 5/16rem;
                                    margin-right: 5/16rem;
                                }
                            }
                            .classpage-operation {
                                float: right;
                                margin-right: 10/16rem;
                                a {
                                    cursor: pointer;
                                    padding-left: 5/16rem;
                                    padding-right: 5/16rem;
                                    &:hover {
                                        color: #ff6700;
                                    }
                                }
                                .page-active {
                                    color: red;
                                    font-weight: 600;
                                }
                                .page-disable {
                                    color: #B9B9B9;
                                    cursor: default;
                                    &:hover {
                                        color: #B9B9B9;
                                    }
                                }
                            }
                        }
                    }
                }
                .btn-item {
                    margin-top: 30/16rem;
                    margin-left: 1060/16rem;
                    .btn {
                        width: 120/16rem;
                        height: 30/16rem;
                        border-radius: 3/16rem;
                        border: none;
                        font-weight: bold;
                        font-size: 14/16rem;
                        outline: none;
                        cursor: pointer;
                        margin-right: 20/16rem;
                    }
                    .red {
                        color: #fff;
                        background-color: #E86167;
                        &:active {
                            background-color: #EB777C;
                        }
                    }
                }
            }
        }
        .page-list {
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #EBEEF7;
            margin-top: 15/16rem;
            .page-item {
                height: 40/16rem;
                font-size: 14/16rem;
                line-height: 40/16rem;
            }
            .page-info {
                float: left;
                margin-left: 15/16rem;
                span {
                    margin-left: 5/16rem;
                    margin-right: 5/16rem;
                }
            }
            .page-operation {
                float: right;
                margin-right: 10/16rem;
                a {
                    cursor: pointer;
                    padding-left: 5/16rem;
                    padding-right: 5/16rem;
                    &:hover {
                        color: #ff6700;
                    }
                }
                .page-active {
                    color: red;
                    font-weight: 600;
                }
                .page-disable {
                    color: #B9B9B9;
                    cursor: default;
                    &:hover {
                        color: #B9B9B9;
                    }
                }
            }
        }
    }
}