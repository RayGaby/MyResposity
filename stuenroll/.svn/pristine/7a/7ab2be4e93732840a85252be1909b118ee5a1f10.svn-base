body {
    background-color: #e7e7e7;
}
.main-container {
    background-color: #fff;
    margin: 15/16rem;
    padding: 15/16rem;
    .tab-list {
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #EBEEF7;
        .tab-item {
            color: #fff;
            background-color: #02A0E9;
            float: left;
            height: 36/16rem;
            line-height: 36/16rem;
            text-align: center;
            padding-left: 20/16rem;
            padding-right: 20/16rem;
            letter-spacing: 1/16rem;
            font-size: 14/16rem;
            cursor: pointer;
        }
    }
    .tab-container {
        //overflow: hidden;
        .tab-content {
            position: relative;
            .operation-list {
                margin: 0;
                padding: 0;
                height: 48/16rem;
                .operation-item {
                    float: left;
                    height: 48/16rem;
                    line-height: 48/16rem;
                    text-align: center;
                    letter-spacing: 1/16rem;
                    font-size: 14/16rem;
                    padding-left: 10/16rem;
                    padding-right: 10/16rem;
                    cursor: pointer;
                }
            }
            .update-container {
                display: none;
                position: absolute;
                background-color: #F0F0F0;
                border-radius: 5/16rem;
                width: 1601/16rem;
                .title {
                    padding-top: 15/16rem;
                    padding-left: 30/16rem;
                    padding-right: 30/16rem;
                    .first-title {
                        font-size: 16/16rem;
                        border-bottom: dashed 1.5/16rem #999;
                        padding-bottom: 15/16rem;
                    }
                }
                .second-title {
                    width: 100/16rem;
                    padding-left: 30/16rem;
                    padding-top: 15/16rem;
                    float: left;
                    font-size: 14/16rem;
                }
                .update-content {
                    padding-top: 15/16rem;
                    padding-left: 130/16rem;
                    padding-bottom: 30/16rem;
                    .update-item {
                        padding-top: 20/16rem;
                        padding-bottom: 10/16rem;
                        label {
                            width: 75/16rem;
                            font-size: 14/16rem;
                            letter-spacing: 1/16rem;
                            margin-right: 10/16rem;
                            display: inline-block;
                        }
                        .input {
                            width: 180/16rem;
                            height: 30/16rem;
                            outline: none;
                            border-radius: 3/16rem;
                            border: solid 1/16rem #e0e0e0;
                            color: #333;
                            font-size: 13/16rem;
                            padding-left: 15/16rem;
                            padding-right: 15/16rem;
                            margin-right: 30/16rem;
                        }
                        .btn {
                            width: 120/16rem;
                            height: 30/16rem;
                            border-radius: 3/16rem;
                            border: none;
                            font-weight: bold;
                            font-size: 14/16rem;
                            outline: none;
                            cursor: pointer;
                            margin-right: 20/16rem;
                        }
                        .red {
                            color: #fff;
                            background-color: #E86167;
                            &:active {
                                background-color: #EB777C;
                            }
                        }
                    }
                }
            }
        }
        .page-list {
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #EBEEF7;
            margin-top: 15/16rem;
            .page-item {
                height: 40/16rem;
                font-size: 14/16rem;
                line-height: 40/16rem;
            }
            .page-info {
                float: left;
                margin-left: 15/16rem;
                span {
                    margin-left: 5/16rem;
                    margin-right: 5/16rem;
                }
            }
            .page-operation {
                float: right;
                margin-right: 10/16rem;
                a {
                    cursor: pointer;
                    padding-left: 5/16rem;
                    padding-right: 5/16rem;
                    &:hover {
                        color: #ff6700;
                    }
                }
                .page-active {
                    color: red;
                    font-weight: 600;
                }
                .page-disable {
                    color: #B9B9B9;
                    cursor: default;
                    &:hover {
                        color: #B9B9B9;
                    }
                }
            }
        }
    }
}