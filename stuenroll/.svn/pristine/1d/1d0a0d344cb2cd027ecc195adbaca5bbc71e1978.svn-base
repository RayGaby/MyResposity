body{
    background-color: #e7e7e7;
}

.main-container{
    background-color: #fff;
    margin: 15/16rem;
    padding: 15/16rem;
    .tab-list{
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #EBEEF7;
        .tab-item{
            float: left;
            height: 36/16rem;
            line-height: 36/16rem;
            text-align: center;
            padding-left: 20/16rem;
            padding-right: 20/16rem;
            letter-spacing: 1/16rem;
            font-size: 14/16rem;
            cursor: pointer;
        }
        .tab-active{
            color: #fff;
            background-color: #02A0E9;
        }
    }
    .tab-container{
        overflow: hidden;
        .tab-content{
            display: none;
            .operation-list{
                margin: 0;
                padding: 0;
                height: 48/16rem;
                .operation-item{
                    float: left;
                    height: 48/16rem;
                    line-height: 48/16rem;
                    text-align: center;
                    letter-spacing: 1/16rem;
                    font-size: 14/16rem;
                    padding-left: 10/16rem;
                    padding-right: 10/16rem;
                    cursor: pointer;
                    display:none;
                }
            }
        }
        .content-active{
            display: block;
        }
        .page-list{
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #EBEEF7;
            margin-top: 15/16rem;
            .page-item{
                height: 40/16rem;
                font-size: 14/16rem;
                line-height: 40/16rem;
            }
            .page-info{
                float: left;
                margin-left: 15/16rem;
                span{
                    margin-left: 5/16rem;
                    margin-right: 5/16rem;
                }
            }
            .page-operation{
                float: right;
                margin-right: 10/16rem;
                a{
                    cursor: pointer;
                    padding-left: 5/16rem;
                    padding-right: 5/16rem;
                    &:hover{
                        color: #ff6700;
                    }
                }
                .page-active{
                    color: red;
                    font-weight: 600;
                }
                .page-disable{
                    color: #B9B9B9;
                    cursor: default;
                    &:hover{
                        color: #B9B9B9;
                    }
                }
            }
        }
        
    }
}
